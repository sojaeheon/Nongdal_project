<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".activity.LoginActivity">

    <!--뒤로가기 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <!--뒤로가기 버튼-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cldbackBtn"
            android:layout_width="94dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0"
            android:backgroundTint="#FFC107"
            android:text="뒤로가기"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="394dp" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="날짜를 지정해 주세요!"
            android:gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>


    <!--캘린더 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.4">
        <!--캘린더뷰-->
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>


    <!--성장 정보 & 성장 일지(2행)-->

    <!--저장 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <!--성장 정보 table-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!--속성 행-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#808080">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#E1E1E1"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="초장"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관부직경"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="엽장"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <!--각 속성에 대한 성장 정보-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#808080">

                <!--초장 행-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical|center_horizontal">

                    <!--초장 입력-->
                    <EditText
                        android:id="@+id/inputInfo1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:hint="@string/inputinfo"
                        android:inputType="text"
                        android:textAlignment="center"></EditText>
                </TableRow>

                <!--관부직경 행-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical|center_horizontal">

                    <!--관부직경 입력-->
                    <EditText
                        android:id="@+id/inputInfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:hint="@string/inputinfo"
                        android:inputType="text"
                        android:textAlignment="center"></EditText>
                </TableRow>

                <!--엽장 행-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical|center_horizontal">

                    <!--엽장 입력-->
                    <EditText
                        android:id="@+id/inputInfo3"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:ems="10"
                        android:hint="@string/inputinfo"
                        android:inputType="text"
                        android:textAlignment="center"></EditText>
                </TableRow>
            </TableLayout>
        </LinearLayout>


        <!--성장 일지 레아이웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="성장 일지"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">

                <!--성장 일지 입력-->
                <EditText
                    android:id="@+id/inputdiary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="@string/inputdiary"
                    android:inputType="text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="right"
        android:orientation="horizontal">

        <!--삭제 버튼-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clddeleteBtn"
            android:layout_width="94dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:layout_marginEnd="16dp"
            android:layout_weight="0"
            android:backgroundTint="#FFC107"
            android:text="삭제"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="394dp" />

        <!--저장 버튼-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cldsaveBtn"
            android:layout_width="94dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_marginEnd="16dp"
            android:layout_weight="0"
            android:backgroundTint="#FFC107"
            android:text="저장"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="394dp" />


    </LinearLayout>

</LinearLayout>